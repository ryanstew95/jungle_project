<% @sales.each do |sale| %>
  <tr>
    <td><%= sale.name %></td>
    <td><%= sale.starts_on %></td>
    <td><%= sale.ends_on %></td>
    <td>
    <% if sale.finished? %>
    <span>Finished</span>
    <% elsif sale.upcoming? %>
    <span>Upcoming</span>
    <% else %>
    <span>Active</span>
    <% end %>
      </td>
    <td><%= sale.percent_off %></td>
    <td></td>
  </tr>
<% end %>