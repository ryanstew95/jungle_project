<tr>
  <td>
    <%= image_tag product.image.tiny.url %>
  </td>
  <td>
    <h4><%= product.name %></h4>
    <br>
    <p><%= product.description %></p>
  </td>
  <td>
    $<%= product.price %>
  </td>
  <td>
    <div>
      <%= link_to "-", remove_item_cart_path(product_id: product.id), class: 'btn btn-xs btn-danger' %>
      <%= quantity %>
      <%= link_to "+", add_item_cart_path(product_id: product.id), class: 'btn btn-xs btn-success' %>
    </div>
  </td>
  <td>
    $<%= product.price * quantity %>
  </td>
</tr>

